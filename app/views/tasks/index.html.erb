<h1>Task List Page</h1>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %> 
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        
        <td><%= task.user.name if task.user %></td>
        <td><%= link_to t('common.show'), task %></td>
        <td><%= link_to t('common.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('common.destroy'), task, method: :delete, data: { confirm: 'Are you sure you want to delete it?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>