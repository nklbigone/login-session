<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebRailsSessionLoginTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
    <li><%= link_to "Task list", tasks_path, id: "tasks-index" %></li>
    <li><%= link_to "Register a task", new_task_path, id: "new-task" %></li>
    <li><%= link_to "Account", user_path(current_user.id), id: "my-account" %></li>
    <li><%= link_to "Logout", session_path(current_user.id), method: :delete, id: "sign-out" %></li>
    <% else %>
    <li><%= link_to "Register Account", new_user_path, id: "sign-up" %></li>
    <li><%= link_to "Login", new_session_path, id: "sign-in" %></li>
<% end %>
    <p id="notice"><%= notice %></p>
    <%= yield %>
  </body>
</html>
